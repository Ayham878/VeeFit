            DrawerText = "#424242",
            GrayLight = "#EEEEEE",
            GrayLighter = "#F5F5F5",
            Info = "#4A86FF",
            Success = "#3DCB6C",
            Warning = "#FFB545",
            Error = "#FF3F5F",
            LinesDefault = "#E0E0E0",
            TableLines = "#E1E1E1",
