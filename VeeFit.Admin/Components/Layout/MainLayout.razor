            Surface = "#FFFFFF",
            Background = "#F5F5F7",
            BackgroundGray = "#F0F0F2",
            AppbarText = "#424242",
            AppbarBackground = "rgba(255,255,255,0.95)",
            DrawerBackground = "#FFFFFF",
            ActionDefault = "#757575",
            ActionDisabled = "#9E9E9E4D",
            ActionDisabledBackground = "#BDBDBD4D",
            TextPrimary = "#212121",
            TextSecondary = "#616161",
            TextDisabled = "#00000033",
            DrawerIcon = "#616161",
            DrawerText = "#424242",
            GrayLight = "#EEEEEE",
            GrayLighter = "#F5F5F5",
            Info = "#4A86FF",
            Success = "#3DCB6C",
            Warning = "#FFB545",
            Error = "#FF3F5F",
            LinesDefault = "#E0E0E0",
            TableLines = "#E1E1E1",
            Divider = "#EEEEEE",
            OverlayLight = "#F5F5F780",
        };

    private readonly PaletteDark _darkPalette = new()
    {
            Primary = "#1367F2", // VeeFit blue from logo and progress indicators
            Secondary = "#1E88E5", // Lighter variant of primary blue
            Surface = "#FFFFFF",
            Background = "#F5F5F7",
            BackgroundGray = "#F0F0F2",
            AppbarText = "#424242",
            AppbarBackground = "rgba(255,255,255,0.95)",
            DrawerBackground = "#FFFFFF",
